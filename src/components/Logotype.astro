---
import styles from "./logotype.module.scss";
import Logo from "../assets/Logo.svg";
---

<a href="/" class="logotype">
    <Logo aria-label="Lumphammer logo" width={50} />
    <div class="text">Lumphammer</div>
</a>

<style>
.logotype {
  font-family: "Alfa Slab One", serif;
  filter: var(--lumphammer-logo-filter);
  display: flex;
  flex-direction: row;
  gap: 0.5em;
  align-items: center;

  @include light-theme(&) {
    filter: drop-shadow(0.05em 0.05em 0.05em #fff)
      drop-shadow(0.1em 0.1em 0.1em #0004);
    --lumphammer-logo-svg-color: #{$cyan-750};
    color: #{$cyan-650};
  }
  @include dark-theme(&) {
    filter: drop-shadow(0 0 0.5em var(--pico-primary));
    --lumphammer-logo-svg-color: #{$cyan-50};
    color: white;
  }
  svg {
    fill: var(--lumphammer-logo-svg-color);
  }
}

.text {
  margin: 0;
  text-transform: uppercase;
}

</style>
